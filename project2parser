%{

#include<stdio.h>

%}

%start program

%union { 
	int ival; 
	float fval;
}

%token END
%token END_STATEMENT
%token POINT
%token LINE
%token CIRCLE
%token RECTANGLE
%token SET_COLOR
%token <ival> INT
%token <fval> FLOAT

%% 

program:	stmt_list END END_STATEMENT
		;

stmt_list:	stmt
		|
		stmt stmt_list
		;

stmt:		command END_STATEMENT
		;

command:	LINE INT INT INT INT
		{
			printf("line command");
		}
		|
		POINT INT INT
		{
			printf("point command");
		}
		|
		CIRCLE INT INT INT
		|
		RECTANGLE INT INT INT INT
		|
		SET_COLOR INT INT INT
		;

%%

int main()
{
	return(yyparse());
}

yyerror(s)
char *s;
{
	fprintf(stderr, "%s\n",s);
}

yywrap()
{
	return(1);
}
